---
css: |
  .frontmatter {
    display:flex;
    flex-wrap:wrap;
    align-items:center;
    gap: 2rem;
    margin-top: 2rem;
    margin-bottom: 1rem;
    & > * {
      flex-grow: 0;
      flex-shrink: 1;
      flex-basis: 20em;
      &:first-child {
        flex-grow: 2;
      }
    }
  }
---
<div class="frontmatter">
{{ content | safe }}
</div>